<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Lubrisense.ViewModels"
             xmlns:fonts="clr-namespace:Lubrisense.Resources.Fonts"
             x:Class="Lubrisense.Views.DeviceMenuView"
             Title="Menu do Dispositivo"
             BackgroundColor="#F2F4F7"
             x:DataType="viewModels:DeviceMenuViewModel">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="20">

            <!-- CABEÃ‡ALHO (CARD DE INFO E STATUS) -->
            <Frame BackgroundColor="White" CornerRadius="16" HasShadow="True" BorderColor="Transparent" Padding="20">

                <!-- GRID ORGANIZADOR -->
                <!-- Coluna 0: Texto (*) | Coluna 1: Status (Auto) -->
                <!-- Linhas: Definem a altura dos status -->
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" ColumnSpacing="15" RowSpacing="15">

                    <!-- === COLUNA 0: IDENTIFICAÃ‡ÃƒO (Ocupa as 2 linhas) === -->
                    <VerticalStackLayout Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" 
                                         VerticalOptions="Center" Spacing="4">

                        <!-- Nome Principal -->
                        <Label Text="{Binding DeviceTitle}" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="#101828"
                               LineBreakMode="TailTruncation"/>

                        <!-- Detalhes -->
                        <Label Text="{Binding DeviceSubTitle}" 
                               FontSize="16" 
                               TextColor="#667085"/>

                        <Label Text="{Binding DeviceSetor}" 
                               FontSize="16" 
                               TextColor="#667085"/>

                        <Label Text="{Binding DeviceLubricant}" 
                               FontSize="16" 
                               TextColor="#667085"/>
                    </VerticalStackLayout>

                    <!-- === COLUNA 1, LINHA 0: BATERIA === -->
                    <VerticalStackLayout Grid.Column="1" Grid.Row="0" HorizontalOptions="Center" Spacing="0">
                        <Label Text="ðŸ”‹" FontSize="24" HorizontalOptions="Center"/>
                        <Label Text="{Binding DeviceBattery}" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#333333" 
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Bateria" 
                               FontSize="16" 
                               TextColor="#999999" 
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>

                    <!-- === COLUNA 1, LINHA 1: TEMPERATURA === -->
                    <VerticalStackLayout Grid.Column="1" Grid.Row="1" HorizontalOptions="Center" Spacing="0">
                        <Label Text="ðŸŒ¡ï¸" FontSize="24" HorizontalOptions="Center"/>
                        <Label Text="{Binding DeviceTemperature}" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="#333333" 
                               HorizontalTextAlignment="Center"/>
                        <Label Text="Temp." 
                               FontSize="16" 
                               TextColor="#999999" 
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>

                </Grid>
            </Frame>

            <Label Text="AÃ§Ãµes DisponÃ­veis" TextColor="#667085" FontSize="14" FontAttributes="Bold" Margin="5,0,0,0"/>

            <!-- GRID DE BOTÃ•ES (MENU) -->
            <Grid RowDefinitions="140, 140" ColumnDefinitions="*,*" ColumnSpacing="15" RowSpacing="15">

                <!-- BOTÃƒO 1: CONFIGURAÃ‡ÃƒO -->
                <Frame Grid.Row="0" Grid.Column="0" 
                       CornerRadius="16" HasShadow="True" BorderColor="Transparent" Padding="0"
                       BackgroundColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToParametersCommand}"/>
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="{x:Static fonts:FluentUI.settings_24_regular}" 
                               FontFamily="FluentRegular" 
                               FontSize="32" 
                               TextColor="#2196F3"
                               HorizontalOptions="Center"/>
                        <Label Text="Configurar" 
                               TextColor="#344054" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- BOTÃƒO 2: HISTÃ“RICO -->
                <Frame Grid.Row="0" Grid.Column="1" 
                       CornerRadius="16" HasShadow="True" BorderColor="Transparent" Padding="0"
                       BackgroundColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToHistoryCommand}"/>
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="{x:Static fonts:FluentUI.history_24_regular}" 
                               FontFamily="FluentRegular" 
                               FontSize="32" 
                               TextColor="#7B1FA2"
                               HorizontalOptions="Center"/>
                        <Label Text="HistÃ³rico" 
                               TextColor="#344054" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- BOTÃƒO 3: CONTROLE MANUAL -->
                <Frame Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                       CornerRadius="16" HasShadow="True" BorderColor="Transparent" Padding="0"
                       BackgroundColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ToggleManualDosageCommand}"/>
                    </Frame.GestureRecognizers>

                    <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                        <Label Text="{x:Static fonts:FluentUI.hand_right_24_regular}" 
                               FontFamily="FluentRegular" 
                               FontSize="32" 
                               TextColor="#FF9800"
                               VerticalOptions="Center"/>
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="Dosagem Manual" 
                                   TextColor="#344054" 
                                   FontSize="16" 
                                   FontAttributes="Bold"/>
                            <Label Text="Habilitar controle direto" 
                                   TextColor="#98A2B3" 
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>