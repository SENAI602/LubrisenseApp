<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Lubrisense.ViewModels"
             x:Class="Lubrisense.Views.DeviceMenuView"
             Title="Menu do Dispositivo"
             BackgroundColor="#F5F5F5"
             x:DataType="viewModels:DeviceMenuViewModel">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Cabeçalho com Info do Dispositivo -->
            <Frame BackgroundColor="White" CornerRadius="10" HasShadow="True" BorderColor="Transparent" Padding="20">
                <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Label Text="{Binding DeviceTitle}" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#333333" 
                           HorizontalTextAlignment="Center"/>

                    <Label Text="{Binding DeviceSubTitle}" 
                           FontSize="14" 
                           TextColor="Gray" 
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Ações Disponíveis" TextColor="#666666" FontSize="14" Margin="0,10,0,0"/>

            <!-- Botão 1: Parâmetros -->
            <Button Text="Editar Parâmetros"
                    Command="{Binding GoToParametersCommand}"
                    BackgroundColor="White"
                    TextColor="#2196F3"
                    BorderColor="#2196F3"
                    BorderWidth="1"
                    CornerRadius="10"
                    HeightRequest="60"
                    FontAttributes="Bold"/>

            <!-- Botão 2: Histórico -->
            <Button Text="Visualizar Histórico"
                    Command="{Binding GoToHistoryCommand}"
                    BackgroundColor="White"
                    TextColor="#2196F3"
                    BorderColor="#2196F3"
                    BorderWidth="1"
                    CornerRadius="10"
                    HeightRequest="60"
                    FontAttributes="Bold"/>

            <!-- Botão 3: Controle Manual -->
            <Button Text="Habilitar Dosagem Manual"
                    Command="{Binding ToggleManualDosageCommand}"
                    BackgroundColor="White"
                    TextColor="#FF9800"
                    BorderColor="#FF9800"
                    BorderWidth="1"
                    CornerRadius="10"
                    HeightRequest="60"
                    FontAttributes="Bold"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>