<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lubrisense.MainPage">

    <Grid RowDefinitions="60,*,60" VerticalOptions="Fill" Padding="20">
        <Button Grid.Row="0" Text="Procurar dispositivos" Clicked="OnScanClicked" />

        <CollectionView x:Name="DevicesList" Grid.Row="1" SelectionMode="Single" SelectionChanged="OnDeviceSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Name}" Padding="10" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="2" Text="Enviar LED_ON" Clicked="OnSendClicked" />
    </Grid>

</ContentPage>
